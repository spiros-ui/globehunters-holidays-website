# GlobeHunters Holidays - Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# DATABASE
# ===========================================
# Neon PostgreSQL connection string
DATABASE_URL="postgresql://user:password@host.neon.tech/database?sslmode=require"

# ===========================================
# CACHING (Redis)
# ===========================================
# Upstash Redis connection
UPSTASH_REDIS_REST_URL="https://your-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token"

# ===========================================
# FLIGHT API (Duffel)
# ===========================================
# Get credentials at https://app.duffel.com
DUFFEL_ACCESS_TOKEN="duffel_live_xxxx"
# Use duffel_test_ prefix for sandbox

# ===========================================
# HOTEL API (Amadeus)
# ===========================================
# Get credentials at https://developers.amadeus.com
AMADEUS_API_URL="https://api.amadeus.com"  # Use https://test.api.amadeus.com for sandbox
AMADEUS_CLIENT_ID="your-client-id"
AMADEUS_CLIENT_SECRET="your-client-secret"

# ===========================================
# ACTIVITIES API (Viator)
# ===========================================
# Get credentials at https://partnerportal.viator.com
VIATOR_API_URL="https://api.viator.com/partner"
VIATOR_API_KEY="your-api-key"

# ===========================================
# CURRENCY / FX RATES
# ===========================================
# Open Exchange Rates - https://openexchangerates.org
OPENEXCHANGERATES_APP_ID="your-app-id"

# ===========================================
# AUTHENTICATION (Google OAuth)
# ===========================================
# Google Cloud Console - https://console.cloud.google.com
GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-client-secret"
NEXTAUTH_SECRET="generate-a-secure-random-string"
NEXTAUTH_URL="http://localhost:3000"  # Change in production

# Allowed admin domain
ADMIN_ALLOWED_DOMAIN="globehunters.com"

# ===========================================
# ANALYTICS & TRACKING
# ===========================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Google Tag Manager
NEXT_PUBLIC_GTM_ID="GTM-XXXXXXX"

# Meta (Facebook) Pixel
NEXT_PUBLIC_META_PIXEL_ID="XXXXXXXXXX"

# ===========================================
# CALL TRACKING (VoIPStudio)
# ===========================================
VOIPSTUDIO_API_KEY="your-api-key"
VOIPSTUDIO_ACCOUNT_ID="your-account-id"

# ===========================================
# SITE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SITE_URL="https://globehuntersholidays.com"
NEXT_PUBLIC_DEFAULT_PHONE="+442089444555"
NEXT_PUBLIC_DEFAULT_PHONE_FORMATTED="020 8944 4555"

# Default currency
NEXT_PUBLIC_DEFAULT_CURRENCY="GBP"

# ===========================================
# DEVELOPMENT
# ===========================================
# Set to "true" to use mock data instead of real APIs
USE_MOCK_DATA="true"
